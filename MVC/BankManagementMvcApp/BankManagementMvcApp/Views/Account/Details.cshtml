@{
    ViewData["Title"] = "Account Details";
}

<h1>View Account Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="accountNumber" class="control-label">Account Number</label>
                <input type="number" id="accountNumber" name="accountNumber" class="form-control" required />
                <span class="text-danger">@Html.ValidationMessage("accountNumber")</span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="View Details" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    @{
        // Ensure client-side validation for the account number input
        // You might need to manually add a script here if _ValidationScriptsPartial doesn't cover simple int inputs
        // For a single input, a simple required attribute and type="number" is often sufficient.
    }
}